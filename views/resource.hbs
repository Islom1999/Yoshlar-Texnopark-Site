<main>
    <!-- slider Area Start-->
    <div class="slider-area ">
        <!-- Mobile Menu -->
        <div class="single-slider slider-height2 d-flex align-items-center"
            data-background="{{pages.resourceHeader.bgImage}}">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>{{pages.resourceHeader.title}}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->

    <!-- Favourite Places Start -->
    <div class="favourite-place place-padding">
        <div class="container">
            <!-- image gallareya -->
            <div class="whole-wrap">
                <div class="container">
                    <div class="my-5">
                        <!-- <h3>Yoshlar texnoparkining qurilish loyihasi</h3> -->
                        <div class="row mb-5">
                            <div class="col-lg-12">
                                <div class="section-tittle text-center">
                                    <span>Surxondaryo</span>
                                    <h1>Yoshlar texnoparkining qurilish loyihasi</h1>
                                </div>
                            </div>
                        </div>
                        <div class="row gallery-item">
                            {{#if resources}}
                            {{#each resources}}
                            <div class="col-md-4">
                                <a href="{{imageUrl}}" class="img-pop-up">
                                    <div class="single-gallery-image" style="background: url({{imageUrl}});">
                                    </div>
                                </a>
                            </div>
                            {{/each}}
                            {{else}}
                            <h2 class="text-center">Hozircha malumotlar yo'q</h2>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Favourite Places End -->
</main>