<main>
    <div class="slider-area ">
        <!-- Mobile Menu -->
        <div class="single-slider slider-height2 d-flex align-items-center"
            data-background="{{pages.contactHeader.bgImage}}">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>{{pages.contactHeader.title}}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- ================ contact section start ================= -->
    <section class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="contact-title">Biz bilan bog'lanish</h2>
                </div>
                <div class="col-lg-8">
                    <form class="form-contact contact_form" action="/contact/message" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <textarea class="form-control w-100" name="message" id="message" cols="30" rows="9" placeholder="Savol va taklifizni kiriting"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control valid" name="fullName" id="name" type="text" placeholder="Ism familiya">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control valid" name="phone" id="phone" type="number" placeholder="Tel raqamizni kiriting">
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="button button-contactForm boxed-btn">Jo'natish</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-3 offset-lg-1">
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-home"></i></span>
                        <div class="media-body">
                            <h3>Surxondaryo, Termiz.</h3>
                            <p>TerDU yaqinida</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                        <div class="media-body">
                            <h3>+998914475252</h3>
                            <p>Dushanbadan dan Juma 9:00 dan 16:00</p>
                        </div>
                    </div>
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-email"></i></span>
                        <div class="media-body">
                            <h3>islom@gmail.com</h3>
                            <p>Email pochta</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-5 pb-5">
                <div class="col-lg-12">
                    <div class="section-tittle text-center pb-4">
                        <h1>{{pages.maps.title}}</h1>
                    </div>
                </div>
                {{{pages.maps.location}}}
            </div>
        </div>
    </section>
    <!-- ================ contact section end ================= -->
</main>